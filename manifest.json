{
    "manifest_version": 2,
    "name": "Define",
    "version": "1.0",
    "description": "Quickly define the selected term.",

    "background": {
        "scripts": [
            "main.js"
        ]
    },

    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "webRequest"
    ],

    "web_accessible_resources": [
        "keys.json"
    ]
}